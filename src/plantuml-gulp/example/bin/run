#! /bin/sh

# ------------------------
#
# Run a container as an example
#
# ------------------------

cd `dirname $0`/../
HERE=$(pwd)

echo ""
echo "----------------------------"
echo "Running an example"
echo "----------------------------"
echo ""

docker run \
    -it \
    --rm \
    -v $(pwd)/uml/:/workspace/uml \
    -v $(pwd)/img/:/workspace/img \
    qmu1/plantuml-gulp:latest \
    /bin/sh -c "
        gulp watch
    "
